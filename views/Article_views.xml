<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <!--Define view_form_article -->
        <record id="view_form_article" model="ir.ui.view">
            <field name="name">article Form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                    <field name="state" position="replace"/>
                <sheet position="before">
                    <header>
                        <button name="valider" string="Verouiller" states="brouillon" class="oe_highlight"/>
                        <button name="transferé" string="Transferé" states="pret" class="oe_highlight"/>
                        <field  name="state"
                                widget="statusbar"
                                statusbar_visible="brouillon,pret,transferé"
                                statusbar_colors='{"brouillon":"blue","pret":"blue"}'/>
                    </header>
                </sheet>

                        <field name="default_code" position="after">
                                <button name="generer le code" string="Générer le code" type="object" class="oe_highlight" />
                        </field>

                        <xpath expr="//field[@name='active']" position="replace"/>

                        <!--<field name="ean13" position="after">-->
                                <!--<field name="image" widget='image' class="oe_avatar"  />-->
                        <!--</field>-->

                        <xpath expr="//field[@name='name']" position="after" >
                             <label for="categ_id"  style="width:77%;" />
                             <field name="categ_id" style="width:77%;" />
                        </xpath>

                        <!--<xpath expr="//field[@name='purchase_ok']" position="attributes" >-->
                               <!--<attribute name="invisible" > true  </attribute>-->
                        <!--</xpath>-->

                        <!--<xpath expr="//field[@name='purchase_ok']" position="replace" >-->
                               <!--<label for="purchase_ok"  invisible="1"  />-->
                               <!--<field name="purchase_ok" invisible="1" />-->
                        <!--</xpath>-->

                        <!--<xpath expr="//field[@name='sale_ok']" position="after" >-->
                            <!--<label for="is_investissement"  string="Peut être investit"/>-->
                            <!--<field name="is_investissement" string="Peut être investit"/>-->
                        <!--</xpath>-->

            </field>
        </record>



        <!--Define article_search -->
        <record id="view_search_article" model="ir.ui.view">
                <field name="name">Article Search</field>
                <field name="model">product.template</field>
                <field name="inherit_id" ref="product.product_template_search_view"/>
                <field name="arch" type="xml">
                    <xpath expr="//filter[@name='filter_to_sell']" position="after" >
                            <filter name="Invest" string="Invest" icon="terp-mail-message-new" domain="[('is_investissement','=',True)]"/>
                    </xpath>
                </field>
        </record>


        <!--Define article_action -->
        <record model="ir.actions.act_window" id="article_action">
                <field name="name">Article</field>
                <field name="res_model">product.template</field>
                <field name="view_type">form</field>
                <field name="view_mode">kanban,tree,form</field>
                <field name="search_view_id" ref="view_search_article"/>
                <field name="domain">[('is_investissement', '=', True)]</field>
                <!-- Pour passer une valeur à un champ depuis le contexte if suffit de précéder le nom du champ par `default_`-->
                <field name="context">{'is_investissement': True, 'default_type':'product','search_default_Invest':1}</field>
                <field name="help" type="html">
                    <p class="oe_view_nocontent_create">
                        Create new articles investments
                    </p>
                    <p>9IIIIIIIIIIIW !!! :3 xD
                    </p>
                </field>
        </record>



    </data>
</openerp>
