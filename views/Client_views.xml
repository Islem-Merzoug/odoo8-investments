        <!--Define view_form_client -->
        <record id="view_form_client" model="ir.ui.view">
            <field name="name">client Form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id"  ref="base.view_partner_form" />
            <field name="arch" type="xml">
               <field name="website" position="after">
                            <field name="n_rc"/>
                            <field name="n_ai"/>
                            <field name="n_is"/>
                            <field name="n_if"/>
               </field>
               <field name="title" position="after">
                            <field name="type_entreprise" style="width:50%;height:10%;"/>
                            <field name="nombre_employe"/>
                            <field name="code_client"/>
                            <field name="etiquette" />
               </field>

            </field>
        </record>

        <!--Define view_tree_client -->
        <record id="view_tree_client" model="ir.ui.view">
            <field name="name">client tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id"  ref="base.view_partner_tree" />
            <field name="arch" type="xml">
                <field  name="email" position="after">
                    <field name="n_rc" />
                    <field name="etiquette"/>
                </field>
            </field>
        </record>

