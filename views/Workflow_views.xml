<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
       <!--Create workflow-->
        <record id="prod_workflow" model="workflow">
            <field name="name">prod.workflow</field>
            <field name="osv">product.template</field>
            <field name="on_create">True</field>
        </record>

        <!--Activity-->
        <record id="brouil_wrk" model="workflow.activity">
            <field name="wkf_id" ref="prod_workflow"/>
            <field name="flow_start">True</field>
            <field name="name">Brouillon</field>
        </record>
        <record id="pret_wrk" model="workflow.activity">
            <field name="wkf_id" ref="prod_workflow"/>
            <field name="name">Prêt</field>
            <field name="kind">function</field>
            <field name="action">pret_action()</field>
        </record>
        <record id="trans_wrk" model="workflow.activity">
            <field name="wkf_id" ref="prod_workflow"/>
            <field name="flow_stop">True</field>
            <field name="name">Transféré</field>
            <field name="kind">function</field>
            <field name="action">transfere_action()</field>
        </record>

        <!--Transition-->
        <record id="trans_1" model="workflow.transition">
            <field name="act_from" ref="brouil_wrk"/>
            <field name="act_to" ref="pret_wrk"/>
            <field name="signal">valider</field>
        </record>
        <record id="trans_1_2" model="workflow.transition">
            <field name="act_from" ref="pret_wrk"/>
            <field name="act_to" ref="trans_wrk"/>
            <field name="signal">transfere</field>
        </record>



    </data>
</openerp>
